<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NossaPrimeiraAppNoite">

        <activity
            android:name="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.TodoActivity"
            android:parentActivityName="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.TodoActivity" />

        <activity
            android:name="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.PostsActivity"
            android:parentActivityName="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.PostsActivity" />

        <activity
            android:name="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.AlbumsActivity"
            android:parentActivityName="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.AlbumsActivity" />

        <activity
            android:name="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.DetailTodoActivity"
            android:parentActivityName="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.DetailTodoActivity" />

        <activity
            android:name="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.DetailPostsActivity"
            android:parentActivityName="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.DetailPostsActivity" />

        <activity
            android:name="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.DetailAlbumsActivity"
            android:parentActivityName="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.DetailAlbumsActivity" />

        <activity android:name="br.edu.uniritter.mobile.JsonPlaceholderRecyclerView.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>